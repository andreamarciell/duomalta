{
  "rules": [
    {
      "id": "gr-01",
      "title": "L-Artiklu 'il-' - L'Articolo",
      "description": "L'articolo determinativo 'il-' e le sue assimilazioni fonetiche",
      "examples": [
        "il-bieb (la porta) → id-dar (la casa)",
        "il-ktieb (il libro) → il-ġnien (il giardino)",
        "il-ħajja (la vita) → il-ħobż (il pane)"
      ],
      "exercises": ["gr-ex-01", "gr-ex-02"],
      "difficulty": 2,
      "category": "morphology",
      "details": {
        "assimilation": {
          "d": "id- (es. id-dar)",
          "g": "il- (es. il-ġnien)",
          "ħ": "il- (es. il-ħobż)",
          "q": "il- (es. il-qalb)",
          "ż": "iż- (es. iż-żmien)"
        }
      }
    },
    {
      "id": "gr-02",
      "title": "Il-Fonemi Maltin - I Fonemi Maltesi",
      "description": "I suoni caratteristici della lingua maltese",
      "examples": [
        "għ - suono gutturale (es. għal, għandu)",
        "ħ - h aspirata (es. ħobż, ħajja)",
        "q - occlusiva glottale (es. qalb, qattus)",
        "x - fricativa palatale (es. xemx, xita)"
      ],
      "exercises": ["gr-ex-03", "gr-ex-04"],
      "difficulty": 3,
      "category": "phonetics",
      "details": {
        "phonemes": {
          "għ": "suono gutturale, spesso silente",
          "ħ": "h aspirata come in arabo",
          "q": "occlusiva glottale",
          "x": "pronunciato come 'sh' in inglese",
          "ż": "z sonora",
          "ġ": "g palatale"
        }
      }
    },
    {
      "id": "gr-03",
      "title": "Il-Plurali Fratturati - Plurali Irregolari",
      "description": "I plurali che cambiano radicalmente forma",
      "examples": [
        "ktieb → kotba (libro → libri)",
        "tifel → tfal (ragazzo → ragazzi)",
        "ħobż → ħobżijiet (pane → pani)",
        "dar → djar (casa → case)"
      ],
      "exercises": ["gr-ex-05", "gr-ex-06"],
      "difficulty": 4,
      "category": "morphology",
      "details": {
        "broken_plurals": {
          "pattern_1": "CvC → CuCa (ktieb → kotba)",
          "pattern_2": "CvC → CvCa (tifel → tfal)",
          "pattern_3": "CvC → CvCijiet (ħobż → ħobżijiet)"
        }
      }
    },
    {
      "id": "gr-04",
      "title": "Il-Pronomi Suffissi - Pronomi Suffissi",
      "description": "I pronomi che si attaccano alle preposizioni",
      "examples": [
        "miegħi (con me), miegħek (con te), miegħu (con lui)",
        "minni (da me), minnek (da te), minnu (da lui)",
        "għalija (per me), għalik (per te), għalih (per lui)"
      ],
      "exercises": ["gr-ex-07", "gr-ex-08"],
      "difficulty": 3,
      "category": "syntax",
      "details": {
        "suffixes": {
          "1sg": "-i (miegħi, minni, għalija)",
          "2sg": "-ek (miegħek, minnek, għalik)",
          "3sg_m": "-u (miegħu, minnu, għalih)",
          "3sg_f": "-ha (miegħha, minnha, għaliha)"
        }
      }
    },
    {
      "id": "gr-05",
      "title": "Il-Verbi Bażi - Verbi Base",
      "description": "I verbi principali e le loro coniugazioni",
      "examples": [
        "jien qed niktib (sto scrivendo)",
        "int qed tikteb (stai scrivendo)",
        "huwa qed jikteb (sta scrivendo)",
        "aħna qed niktbu (stiamo scrivendo)"
      ],
      "exercises": ["gr-ex-09", "gr-ex-10"],
      "difficulty": 4,
      "category": "morphology",
      "details": {
        "conjugation": {
          "present_continuous": "qed + imperfect",
          "1sg": "n- + stem + -ib",
          "2sg": "t- + stem + -eb",
          "3sg_m": "j- + stem + -eb",
          "1pl": "n- + stem + -u"
        }
      }
    }
  ],
